            android:key="colt_source"
            android:title="@string/colt_source_title"
            android:summary="@string/colt_source_summary" />

        <!-- ColtOS GooglePlus -->
        <PreferenceScreen
            android:key="colt_google_plus"
            android:title="@string/colt_google_plus_title"
            android:summary="@string/colt_google_plus_summary" />

        <!-- Maintainers -->
        <PreferenceScreen
            android:key="maintainers"
            android:title="@string/maintainers_colt_title"
	    android:summary="@string/maintainers_colt_summary"
            android:fragment="com.colt.settings.fragments.Maintainers" />

